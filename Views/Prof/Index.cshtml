@model List<Prof>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">CPF</th>
            <th scope="col">Atuação</th>
            <th scope="col">Disciplina</th>
            <th scope="col">Email</th>
            <th scope="col">Status</th>
            <th scope="col">Formação</th>
            <th scope="col">Telefone</th>
            <th scope="col">CEP</th>


        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (Prof prof in Model)
            {
                <tr>
                    <td>@prof.Nome </td>
                    <td>@prof.Cpf </td>
                    <td>@prof.Atuacao </td>
                    <td>@prof.Disciplina </td>
                    <td>@prof.Email</td>
                    <td>@prof.StatusProfessor</td>
                    <td>@prof.Formacao</td>
                    <td>@prof.Telefone</td>
                    <td>@prof.CEP</td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a type="submit" class="btn btn-primary" role="button" asp-controller="Prof" asp-action="Editar" asp-route-id="@prof.Id">Editar</a>
                        </div>
                    </td>
                    <td>
                    

                    <td>
                        <form asp-controller="Prof" asp-action="DeletarProf" asp-route-id="@prof.Id" method="post">
                            <button type="submit" class="btn btn-danger">Apagar</button>
                        </form>
                    </td>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-info" type="button" asp-controller="Prof" asp-action="AdicionarProf" > Adicionar Professor</a>
</div>