@model List<Aluno>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Matricula</th>
            <th scope="col">Nome</th>
            <th scope="col">CPF</th>
            <th scope="col">Curso</th>
            <th scope="col">Periodo</th>
            <th scope="col">Email</th>
            <th scope="col">Status</th>
            <th scope="col">Data de Nascimento</th>
            <th scope="col">Telefone</th>
            <th scope="col">CEP</th>


        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (Aluno aluno in Model)
            {
                <tr>
                    <td>@aluno.Matricula </td>
                    <td>@aluno.Nome </td>
                    <td>@aluno.Cpf </td>
                    <td>@aluno.Curso </td>
                    <td>@aluno.Periodo </td>
                    <td>@aluno.Email</td>
                    <td>@aluno.StatusAluno</td>
                    <td>@aluno.DataNascimento </td>
                    <td>@aluno.Telefone</td>
                    <td>@aluno.Cep</td>

                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a type="submit" class="btn btn-primary" role="button" asp-controller="Aluno" asp-action="Editar" asp-route-id="@aluno.Id">Editar</a>
                        </div>
                    </td>
                    <td>
                    

                    <td>
                        <form asp-controller="Aluno" asp-action="DeletarAluno" asp-route-id="@aluno.Id" method="post">
                            <button type="submit" class="btn btn-danger">Apagar</button>
                        </form>
                    </td>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-info" type="button" asp-controller="Aluno" asp-action="AdicionarAluno" > Adicionar Aluno</a>
</div>