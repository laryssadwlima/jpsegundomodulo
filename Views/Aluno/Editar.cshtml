@model Aluno

<form asp-controller="Aluno" asp-action="EditarAluno" method="post">

     <input type="hidden" asp-for="Id" />

    <div class="mb-3 col-md-6">
        <label class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control">
    </div>

    <div class="mb-3 col-md-6">
        <label class="form-label">Matricula</label>
        <input type="text" asp-for="Matricula" class="form-control">
    </div>

    <div class="mb-3 col-md-6">
        <label class="form-label">Cpf</label>
        <input type="text" asp-for="Cpf" class="form-control">
    </div>

    <div class="mb-3 col-md-6">
        <label class="form-label">Curso</label>
        <input type="text" asp-for="Curso" class="form-control">
    </div>

    <div class="mb-3 col-md-6">
        <label class="form-label">Periodo</label>
        <input type="number" asp-for="Periodo" class="form-control">
    </div>

    <div class="mb-3 col-md-6">
        <label class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control">
    </div>

    <div class="mb-3 col-md-6">
        <label class="form-label">Data de Nascimento</label>
        <input type="date" asp-for="DataNascimento" class="form-control">
    </div>

    <div class="mb-3 col-md-6">
        <label class="form-label">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control">
    </div>

    <div class="mb-3 col-md-6">
        <label class="form-label">CEP</label>
        <input type="text" asp-for="Cep" class="form-control">
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-info">Editar</button>
    </div>


</form>
